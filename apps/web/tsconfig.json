{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "strict": true,
    "target": "ES2015",
    "isolatedModules": true,
    "downlevelIteration": true,
    "exactOptionalPropertyTypes": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
