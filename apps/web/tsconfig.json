{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "target": "ES2015",
    "isolatedModules": true,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
