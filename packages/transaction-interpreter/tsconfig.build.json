{
  "extends": "tsconfig/universal-esm.json",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,
    "isolatedModules": true,
    "stripInternal": true,
    "noErrorTruncation": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
